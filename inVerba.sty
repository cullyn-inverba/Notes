%Page Formating:
    \usepackage[hmargin=2.9cm,vmargin=1.7cm, headsep=1.2em,]{geometry} 
        \raggedright 
        \setlength\headheight{16pt}
        \renewcommand{\baselinestretch}{1.2} 
    \usepackage[parfill]{parskip}

% Header and Footer:
    \usepackage{fancyhdr}
        \pagestyle{plain}
        \rhead{\today}
        \lhead{\userName}
        \chead{\textsc{\hypertarget{home}\theTitle}}
        \cfoot{\textsc{\institution}}
        \lfoot{\class}
        \rfoot{\hyperlink{home}{\thepage}}

% Math: 
    \usepackage{amsmath, mathtools, amssymb}
        \numberwithin{equation}{section}

