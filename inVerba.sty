% Style:
    \usepackage{xcolor, pagecolor} 
    \usepackage{enumitem}
        \setlist[itemize,2]{label=\(\circ\)}
        \setlist[itemize,3]{label=\textendash}
        \setlist[itemize,1]{label=\(\triangleright\)}

% Utility:
    \usepackage{graphicx, booktabs, multirow, multicol, makecell}
    \usepackage[justification=centering]{caption}
        \captionsetup[table]{skip=3pt,labelformat=empty}
        

    \usepackage{siunitx}
        \sisetup{
        inter-unit-product = \ensuremath{{\cdot}},
        tight-spacing = true,
        per-mode = symbol
        }

% Links:
    \usepackage[hidelinks]{hyperref}
        \hypersetup{
            colorlinks=false,
            linktoc=all,     
            linkcolor=b-Cold,  
        }

% Section Formating: 
    \usepackage{titlesec, titletoc}
        \titleformat{\subsection}{\large\bfseries\color{B-Cold}}{}{0pt}{}
        \titleformat{\subsubsection}{\normalfont\bfseries\color{b-Cold}}{}{0pt}{}
        \titlecontents{section}[0 em]{\bfseries}{}{}{}
        \titlecontents{subsection}
        [1.618 em] {}{}{}{\titlerule*[0.618 em]{.}\contentspage}
        \titlecontents{subsubsection}
        [3.236 em] {}{\color{G-Moon}\small}{}{\titlerule*[0.618 em]{.}\contentspage}
        \titlespacing*{\subsection}{0em}{3ex plus 9ex minus .2ex}{1ex plus .0ex minus .0ex}
        \setlength{\parskip}{1ex plus 2ex minus 0ex}


